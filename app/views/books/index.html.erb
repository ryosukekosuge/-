<div class="flash"><%= flash[:notice] %></div>
 <h1>Books</h1>
  <table>
   <thead>
      <tr>
        <th>Title</th>
        <th>Body</th>
        <th colspan= "3"></th>
      </tr>
    </thead>
  <tbody>
  <% @books.each do |book| %>
   <tr>
    <td><%= book.title %></td>
    <td><%= book.body %></td>
    <td><%= link_to 'Show', book_path(book.id) %></td>
    <td><%= link_to 'Edit', edit_book_path(book.id) %></td>
    <td>
    <%= link_to 'Destroy', book_path(book.id), method: :delete, data: { confirm: 'Are you sureï¼Ÿ' } %>
  <% end %>
    </td>
   </tr>
  </tbody>
 </table>
<h2>New book</h2>
  <%= form_for (@book) do |f| %>
   <% if @book.errors.any? %>
   <div class="error">
    <div class="h3">
     <h3>
      <%= @book.errors.count %>errors prohibited this book from being saved:
     </h3>
    </div>
    <ul>
       <% @book.errors.full_messages.each do |message| %>
         <li><%= message %></li>
       <% end %>
    </ul>
   </div>
  <% end %>
  <div class="field">
    <h3>Title</h3>
     <%= f.text_field :title %>
  </div>
  <div class="field">
   <h3>Body</h3>
   <%= f.text_area :body %>
    </div>
  <div class="actions" >
   <%= f.submit "Create Book" %>
  </div>
  <% end %>
</div>