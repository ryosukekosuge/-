 <h1>Editing Book</h1>
  <% if @book.errors.any? %>
   <div class="error">
    <div class="h3">
     <h3>
      <%= @book.errors.count %>errors prohibited this book from being saved:
     </h3>
    </div>
      <ul>
       <% @book.errors.full_messages.each do |message| %>
        <li><%= message %></li>
       <% end %>
      </ul>
   </div>
  <% end %>
   <%= form_for(@book) do |f| %>
     <div class="field">
      <h4>Title</h4>
      <%= f.text_field :title %>
     </div>
     <div class="field">
      <h4>Body</h4>
      <%= f.text_area :body %>
     </div>
    <div class="actions">
     <%= f.submit 'Update Book' %>
    </div>
  <% end %>
 <%= link_to 'Show', book_path(@book.id) %>
